    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    @RenderSection("PageStyles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="logo">
                    <p>Góc Kể Chuyện</p>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link @(ViewBag.NavLink == "Index" ? "active" : "")"
                                asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewBag.NavLink == "Stories" ? "active" : "")"
                                asp-area="" asp-controller="MainContent" asp-action="Index">Câu chuyện</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewBag.NavLink == "LatestPosts" ? "active" : "")"
                                asp-area="" asp-controller="MainContent" asp-action="LatestPosts">Mới nhất</a></li>
                        <li class="nav-item"><a class="nav-link @(ViewBag.NavLink == "Contact" ? "active" : "")"
                                asp-route="SendContact">Liên hệ</a></li>
                    </ul>

                    @* <form class="form-search" method="get" asp-controller="MainContent" asp-action="SearchPosts">
                        <div class="input-group">
                            <input class="form-control" id="inputfield" type="text" placeholder="Tìm kiếm..." aria-label="Search" name="query">

                            <div class="dropdown">
                                <button class="btn-options dropdown-toggle" type="button"
                                    id="searchCategoryButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-caret-down"></i>
                                </button>
                                <ul class="dropdown-menu shadow-lg" aria-labelledby="searchCategoryButton">
                                    <li><a class="dropdown-item" href="#" data-value="title">Tiêu đề</a></li>
                                    <li><a class="dropdown-item" href="#" data-value="description">Mô tả</a></li>
                                    <li><a class="dropdown-item" href="#" data-value="content">Nội dung</a></li>
                                    <li><a class="dropdown-item" href="#" data-value="author">Tác giả</a></li>
                                </ul>
                                <input type="hidden" name="searchCategory" id="searchCategory" value="title">
                            </div>

                            <button class="btn-search" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </form> *@
                    <partial name="_AccountNavPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="box-shadow">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="footer-left">
                <p>&copy; 2025 Góc Kể Chuyện - All Rights Reserved.</p>
            </div>
            <div class="footer-middle">
                <ul>
                    <li><a href="~/">Trang chủ</a></li>
                    <li><a asp-route="SendContact">Liên hệ</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="TermsOfUse">Điều khoản sử dụng</a></li>
                </ul>
            </div>
            <div class="footer-right">
                <ul class="social-links">
                    <li><a href="#" class="social-icon">Gmail</a></li>
                    <li><a href="#" class="social-icon">Facebook</a></li>
                    <li><a href="#" class="social-icon">Instagram</a></li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/microsoft-signalr/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

