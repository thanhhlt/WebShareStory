@model VerifyCodeViewModel
@{
    ViewData["Title"] = "Xác thực";
}

<style>
    .d-flex .btn {
        display: flex;
        flex-direction: column;
        justify-content: end;
        margin-left: -1.2rem;
    }
</style>

<div>
    <p>Mã đăng nhập đã được tới email đăng ký tài khoản.</p>
</div>

<form asp-controller="Account" asp-action="VerifyCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
    class="form-horizontal" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="RememberMe" type="hidden" />
    <h4>@ViewData["Status"]</h4>
    <div class="d-flex">
        <div class="form-group">
            <label asp-for="Code" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Code" class="form-control mt-2 mb-2" style="max-width: 200px;" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group btn">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-warning mt-1">Gửi</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <input asp-for="RememberBrowser" />
                <label asp-for="RememberBrowser"></label>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
